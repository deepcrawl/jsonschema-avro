{
  "id": "http://yourdomain.com/schemas/myschema.json",
  "description": "Array example",
  "type": "object",
  "properties": {
    "required": {
      "description": "required array",
      "type": "array",
      "items": {
        "description": "a string",
        "type": "string"
      }
    },
    "default": {
      "description": "array with default",
      "type": "array",
      "items": {
        "description": "a string",
        "type": "string"
      },
      "default": []
    },
    "optional": {
      "description": "optional array",
      "type": "array",
      "items": {
        "description": "a number",
        "type": "number"
      }
    },
    "multiple_types": {
      "description": "multiple types array",
      "type": "array",
      "items": {
        "description": "a number or string",
        "type": ["number", "string"]
      }
    }
  },
  "required": ["required"]
}
