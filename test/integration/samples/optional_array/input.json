{
  "id": "http://yourdomain.com/schemas/myschema.json",
  "description": "Optional array example",
  "type": "object",
  "properties": {
    "list": {
      "description": "example array",
      "type": "array",
      "items": {
        "description": "a string",
        "type": "string"
      }
    },
    "list_complex": {
      "description": "example array of complex items",
      "type": "array",
      "items": {
        "description": "an object",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer"
          }
        },
        "required": ["name"]
      }
    },
    "list_enum": {
      "description": "example array of enums",
      "type": "array",
      "items": {
        "description": "an enum",
        "type": "string",
        "enum": ["symbol_a", "symbol_b"]
      }
    },
    "list_array": {
      "description": "example array of arrays",
      "type": "array",
      "items": {
        "description": "an array",
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "list_array_complex": {
      "description": "example array of complex arrays",
      "type": "array",
      "items": {
        "description": "an array",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "age": {
              "type": "array",
              "items": {
                "type": ["string", "integer"]
              }
            },
            "gender": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["Male", "Female"]
              }
            }
          },
          "required": ["name"]
        }
      }
    },
    "list_array_union_complex": {
      "description": "example array of union of complex arrays",
      "type": "array",
      "items": {
        "description": "an array",
        "type": [
          "string",
          {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "age": {
                  "type": "array",
                  "items": {
                    "type": [
                      "string",
                      "integer"
                    ]
                  }
                },
                "gender": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "Male",
                      "Female"
                    ]
                  }
                }
              },
              "required": [
                "name"
              ]
            }
          },
          {
            "description": "an enum",
            "type": "string",
            "enum": ["symbol_a", "symbol_b"]
          }
        ]
      }
    }
  }
}
